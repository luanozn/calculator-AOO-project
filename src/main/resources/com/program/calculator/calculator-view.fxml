<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="302.0" prefWidth="240.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.program.calculator.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="operationField" editable="false" prefHeight="50.0" prefWidth="200.0" />
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <center>
         <GridPane alignment="CENTER" cache="true" hgap="5.0" vgap="5.0" BorderPane.alignment="CENTER">
           <columnConstraints>
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
             <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
           </rowConstraints>
            <children>
               <Button fx:id="sevenButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSevenButtonClick" prefHeight="37.0" prefWidth="46.0" text="7" GridPane.rowIndex="1" />
               <Button fx:id="eightButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onEightButtonClick" prefHeight="40.0" prefWidth="46.0" text="8" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Button fx:id="nineButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onNineButtonClick" prefHeight="40.0" prefWidth="46.0" text="9" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <Button fx:id="multiplicationButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onMultiplicationButtonClick" prefHeight="40.0" prefWidth="47.0" text="*" GridPane.columnIndex="3" GridPane.rowIndex="1" />
               <Button fx:id="fourButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onFourButtonClick" prefHeight="40.0" prefWidth="46.0" text="4" GridPane.rowIndex="2" />
               <Button fx:id="fiveButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onFiveButtonClick" prefHeight="113.0" prefWidth="46.0" text="5" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <Button fx:id="sixButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSixButtonClick" prefHeight="40.0" prefWidth="46.0" text="6" GridPane.columnIndex="2" GridPane.rowIndex="2" />
               <Button fx:id="oneButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onOneButtonClick" prefHeight="40.0" prefWidth="46.0" text="1" GridPane.rowIndex="3" />
               <Button fx:id="twoButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onTwoButtonClick" prefHeight="40.0" prefWidth="46.0" text="2" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               <Button fx:id="threeButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onThreeButtonClick" prefHeight="40.0" prefWidth="46.0" text="3" GridPane.columnIndex="2" GridPane.rowIndex="3" />
               <Button fx:id="subtractionButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onSubtractionButtonClick" prefHeight="40.0" prefWidth="47.0" text="-" GridPane.columnIndex="3" GridPane.rowIndex="2" />
               <Button fx:id="additionButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onAdditionButtonClick" prefHeight="40.0" prefWidth="47.0" text="+" GridPane.columnIndex="3" GridPane.rowIndex="3" />
               <Button fx:id="resultButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onResultButtonClick" prefHeight="40.0" prefWidth="47.0" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" />
               <Button fx:id="zeroButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onZeroButtonClick" prefHeight="40.0" prefWidth="46.0" text="0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               <AnchorPane prefHeight="36.0" prefWidth="136.0">
                  <children>
                     <ButtonBar layoutY="5.0" prefWidth="133.0">
                        <buttons>
                           <Pane>
                              <children>
                                 <Button fx:id="clearButton" contentDisplay="CENTER" layoutX="-7.0" layoutY="-4.0" mnemonicParsing="false" onAction="#onClearButtonClick" prefHeight="35.0" prefWidth="135.0" text="C" />
                              </children>
                           </Pane>
                        </buttons>
                     </ButtonBar>
                  </children>
               </AnchorPane>
               <Button fx:id="divisionButton" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onDivisionButtonClick" prefHeight="40.0" prefWidth="47.0" text="/" GridPane.columnIndex="3" />
               <Button fx:id="pointButton" mnemonicParsing="false" onAction="#onPointButtonClick" prefHeight="35.0" prefWidth="55.0" text="," textAlignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="4" />
               <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteButtonClick" prefHeight="42.0" prefWidth="46.0" text="Del" GridPane.rowIndex="4" />
            </children>
            <BorderPane.margin>
               <Insets />
            </BorderPane.margin>
         </GridPane>
      </center>
   </BorderPane>
</VBox>
